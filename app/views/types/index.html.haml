%p#notice= notice
%h1 Types
%table
  %thead
    %tr
      %th Titulo
      %th{colspan: "3"}
  %tbody
    - @types.each do |type|
      %tr
        %td= type.titulo
        %td= link_to 'Show', type
        %td= link_to 'Edit', edit_type_path(type)
        %td= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Type', new_type_path
